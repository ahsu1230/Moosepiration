.view.accordions
	.search-bar-wrapper
		img.search-icon(src='icons/search-gray.png')
		input(type='text' placeholder='Search for an animation' ng-model="query")

	.main-content-wrapper(ng-repeat="anim in animations | filter:search")
		.animation-wrapper
			ahsu-accordion-rotating-arrow1(ng-if="anim.id=='rotating_arrow1'" title="anim.title" content="anim.content")
			ahsu-accordion-plus-button1(ng-if="anim.id=='plus_button1'" title="anim.title" content="anim.content")
			ahsu-accordion-plus-minus1(ng-if="anim.id=='plus_minus1'" title="anim.title" content="anim.content")
