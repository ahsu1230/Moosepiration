.view.menus
	.search-bar-wrapper
		img.search-icon(src='icons/search-gray.png')
		input(type='text' placeholder='Search for an animation' ng-model="query")

	.main-content-wrapper(ng-repeat="anim in animations | filter:search")
		.animation-wrapper
			.title {{anim.title}}
			ahsu-menu-popup1(ng-if="anim.id=='popup1'")
			.description-wrapper(ng-click="extendDescription($event)") 
				p {{anim.description}}