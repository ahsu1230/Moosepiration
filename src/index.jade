doctype html
html(lang="en")

	head
		title= Moosepiration
		link(rel='stylesheet', href='out.css')
		script(type='text/javascript', src='libs/jquery-2.2.3.min.js')
		script(type='text/javascript', src='libs/lodash-v411-1.js')
		script(type='text/javascript', src='libs/angular.min.js')
		script(type='text/javascript', src='js/main.js')
		script(type='text/javascript', src='js/spinner1.js')

	body(ng-app="myApp" ng-controller="MainCtrl")
		.header
			.header-logo-wrapper Moospiration

		.search-bar-wrapper
			img.search-icon(src='icons/search-gray.png')
			input(type='text' placeholder='Search for an animation' ng-model="query")

		.main-content-wrapper(ng-repeat="anim in animations | filter:search")
			.animation-wrapper
				.title {{anim.title}}
				button.btn-start-anim(ng-click="selectAnimation(anim)") Load
				img(ng-src="{{anim.imageSrc}}")
				.description-wrapper(ng-click="extendDescription($event)") 
					p {{anim.description}}

		.modal-overlay
			.modal-wrapper(ng-if="selectedAnimation.id=='spinner1'" ahsu-spinner1)
			.modal-wrapper(ng-if="selectedAnimation.id=='google'" ahsu-spinner1)
			.modal-wrapper(ng-if="selectedAnimation.id=='apple'" ahsu-spinner1)
			.modal-overlay-header(ng-if="selectedAnimation")
				.modal-overlay-logo {{selectedAnimation.title}}
					button.close(ng-click="closeModal()") Close
					button.reset(ng-click="resetAnimation()") Reset
			