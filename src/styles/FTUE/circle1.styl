ahsu-ftue-circle1-wrapper
.ahsu-ftue-circle1-wrapper
	position: relative

	& .ahsu-rectangular-overlay
		position: fixed
		width: 0px
		height: 0px
		background-color: rgba(0, 0, 0, 0.5)

		&.top-down
			top: -50%
			width: 200%

		&.bottom-up
			bottom: -50%
			width: 200%

		&.left-to-right
			left: -50%
			height: 200%

		&.right-to-left
			right: -50%
			height: 200%

	& .ahsu-circle-outliner
		position: fixed
		top: -50%
		left: -50%
		width: 200%
		height: 200%
		background: radial-gradient(transparent 50%, rgba(0, 0, 0, 0.5) 50%)
		visibility: hidden
		transition: visibility 0.2s linear

		&.ahsu-show
			visibility: visible

		& .ahsu-ftue-description
			position: absolute
			bottom: -64px
			right: 0
			line-height: 32px
			width: 360px
			padding: 8px 16px
			border-radius: 8px
			background: none
			color: white
			opacity: 0.0
			visibility: hidden
			transition: all linear 0.15s

			& p
				margin: 0px
				
			&.ahsu-show
				opacity: 1.0
				visibility: visible
		