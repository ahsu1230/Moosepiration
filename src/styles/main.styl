colorWarmGray = #f1f1f1
colorLightGray = #a8a8a8
colorDarkGray = #666
colorDarkGrayOpaque = rgba(102, 102, 102, 0.5)
colorWhite = #fff
colorBlack = #333

colorNavyBlue = rgba(0, 40, 104, 1)
colorNavyBlueOpaque = rgba(0, 40, 104, 0.1)
colorLightBlue = #5496ff
colorRed = #bf0a30
colorPurple = #6552CE
colorGreen = #329B2E
colorLightGreen = #6fd36b

colorBanner = colorNavyBlue
colorAction = colorRed
colorHighlight = colorPurple

pxHeaderHeight = 64px 				/* height in pixels of main banner header */
percentMainWidth = 80% 				/* width in percent of main content */
pxMainMaxWidth = 800px				/* max width in pixels of main content */

@font-face
	font-family 'Roboto-Regular'
	src url('fonts/Roboto_Condensed/RobotoCondensed-Regular.ttf')

@font-face
	font-family 'Roboto-Light'
	src url('fonts/Roboto_Condensed/RobotoCondensed-Light.ttf')

@font-face
	font-family 'Roboto-Bold'
	src url('fonts/Roboto_Condensed/RobotoCondensed-Bold.ttf')

body
	margin: 0
	background-color: colorWarmGray
	color: colorDarkGray
	font-family: 'Roboto-Regular'
	font-size: 18px
	letter-spacing: 1.5px

body a
	color: colorAction
	text-decoration: none

	&:hover
		text-decoration: underline

body button
	padding: 0
	border: none
	outline: none

.header
	height: pxHeaderHeight
	width: 100%
	margin-bottom: 32px
	background-color: colorBanner

.header-logo-wrapper
	position: relative
	line-height: pxHeaderHeight
	width: percentMainWidth
	max-width: pxMainMaxWidth
	margin: 0 auto

	& a
		font-family: 'Roboto-Regular'
		font-size: 32px
		color: colorWhite
		letter-spacing: 1.5px
		
		&:hover
			text-decoration: none

	& .main-menu-wrapper
		position: absolute
		top: 4px
		right: 0px

		& button
			background-color: colorLightBlue

			&.ahsu-active
			&:hover
				background-color: colorAction

		& ul
			border: 2px solid colorAction
			z-index: 999

		& li
			background-color: white
			border-bottom: 1px solid colorAction

			&:hover
				background-color: colorAction

				& a
					color: white

			& a
				color: colorAction
				font-size: 16px

.search-bar-wrapper
	position: relative
	width: percentMainWidth
	max-width: pxMainMaxWidth
	margin: 0 auto 32px

	img
		position: absolute
		top: 12px
		left: 12px
		width: 24px
		height: 24px

	input
		width: 100%
		line-height: 24px
		padding: 12px 12px 12px 48px
		box-sizing: border-box
		border: none
		border-radius: 8px
		outline: none
		background-color: colorWhite
		color: colorHighlight
		font-size: 14px

		&:active
		&:focus
			box-shadow: 0px 0px 2px 2px colorHighlight

.main-content-wrapper
	width: percentMainWidth
	max-width: pxMainMaxWidth
	margin: 0 auto

.animation-wrapper
	position: relative
	padding: 36px 56px
	margin-bottom: 36px
	background-color: colorWhite
	transition: height 0.25s linear

	.title
		line-height: 56px
		margin-bottom: 36px
		font-size: 28px
		border-bottom: 1px solid colorLightGray

	.animation-icon
		display: inline-block
		width: 64px
		height: 64px
		margin-right: 32px
	
	.description-wrapper
		display: inline-block
		width: calc(100% - 98px)
		height: 64px
		padding: 12px
		box-sizing: border-box
		overflow: hidden
		vertical-align: top
		border: 1px solid colorHighlight
		border-radius: 4px
		cursor: pointer
		transition: box-shadow 0.1s linear, height 0.15s linear

		&:hover
			box-shadow: 0px 0px 2px 1px colorHighlight

		&.extend
			height: 160px
			box-shadow: 0px 0px 2px 1px colorHighlight

			& p
				opacity: 1.0

		& p
			margin: 0
			line-height: 22px
			font-size: 16px
			opacity: 0.5
			transition: opacity 0.1s linear

	.ahsu-banner
		position: absolute
		top: 36px
		right: 56px
	
	.ahsu-button
		position: absolute
		top: 36px
		right: 56px

.btn-start-anim
	position: absolute
	top: 36px
	right: 56px
	padding: 12px 16px
	outline: none
	border: none
	border-radius: 8px
	background-color: colorAction
	color: colorWhite
	font-size: 16px
	font-weight: 100
	letter-spacing: 2px
	cursor: pointer
	
	&:hover
		filter: brightness(110%)
		-webkit-filter: brightness(110%)

.modal-overlay
	position: fixed
	top: 0px
	left: 0px
	width: 100%
	height: 100%
	box-sizing: border-box
	background-color: colorDarkGrayOpaque
	visibility: hidden

	&.show
		visibility: visible

.modal-overlay-header
	position: fixed
	top: 0px
	left: 0px
	width: 100%
	height: pxHeaderHeight
	background-color: colorBlack

	& .modal-overlay-logo
		width: percentMainWidth
		max-width: pxMainMaxWidth
		height: pxHeaderHeight
		line-height: pxHeaderHeight
		margin: 0 auto
		text-transform: uppercase
		font-size: 32px
		color: white
		letter-spacing: 1.5px

		& button
			position: relative
			top: 50%
			transform: translateY(-50%)
			float: right
			padding: 8px 16px
			margin-left: 24px
			outline: none
			border: none
			border-radius: 8px
			color: colorBlack
			background-color: #f8f8f8
			cursor: pointer

			&:hover
				background-color: white

.modal-wrapper
	display: inline-block
	position: relative
	top: 50%
	left: 50%
	transform: translate(-50%, -50%)
	padding: 48px
	border: 2px solid colorDarkGray
	border-radius: 24px
	background-color: colorWhite
	box-shadow: 6px 6px 3px 0px colorDarkGrayOpaque

	.view-to-show
		opacity: 0.0
		visibility: hidden
		transition: opacity 0.15s linear, visibility 0.15s linear

		&.show
			opacity: 1.0
			visibility: visible