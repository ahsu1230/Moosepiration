ahsu-circle-filler-wrapper
.ahsu-circle-filler-wrapper
	width: 300px

	& .ahsu-circle-filler
		position: absolute
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)
		width: 60px
		height: 60px
		margin: 0 auto
		border: 2px solid #c8c8c8
		border-radius: 50%
		overflow: hidden
		opacity: 1.0
		visibility: visible
		transition: opacity 0.15s linear, visibility 0.15s linear

		&.hide
			opacity: 0.0
			visibility: hidden

		& .ahsu-fill
			position: absolute
			top: 2px
			left: 2px
			width: calc(100% - 4px)
			height: calc(100% - 4px)
			background-color: #c8c8c8
			border-radius: 50%

		& .ahsu-fill-blocker
			position: absolute
			top: 0px
			left: 0px
			width: 100%
			height: 100%
			background-color: white

		& .ahsu-fill-percent
			position: absolute
			top: 50%
			left: 50%
			transform: translate(-50%, -50%)
			text-align: center
			font-size: 14px
			color: #888
