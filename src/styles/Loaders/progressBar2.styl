ahsu-progress-bar2-wrapper
.ahsu-progress-bar2-wrapper
	position: relative
	width: 300px

	.ahsu-progress-bar2
		position: absolute
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)
		opacity: 1.0
		visibility: visible
		transition: all 0.1s linear

		&.ahsu-hide
			opacity: 0.0
			visibility: hidden

		& h3
			text-align: center
		
		& .ahsu-bar
			width: 280px
			height: 24px
			margin-bottom: 24px
			border-radius: 12px
			background-color: #c8c8c8
			overflow: hidden

			&.ahsu-highlight
				animation: ahsu-progress-bar2-highlight 0.3s linear 0s 1 forwards

			& .ahsu-progress
				width: 0%
				height: 24px
				background-color: #6fd36b


@keyframes ahsu-progress-bar2-highlight {
	50% {
		box-shadow: 0px 0px 2px 2px #6fd36b
	}
	100% {
		box-shadow: 0px 0px 0px 0px #6fd36b
	}
}