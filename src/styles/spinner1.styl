ahsu-spinner1-wrapper
.ahsu-spinner1-wrapper
	width: 300px
	text-align: center

	& img
		width: 64px
		height: 64px

		&.spin-back
			-webkit-animation: ahsu-spin1-ccw 4s infinite ease-in-out

		&.spin-forward-fast
			-webkit-animation: ahsu-spin1-cw 0.8s infinite linear

	.ahsu-loading-spinner1-wrapper
		position: absolute
		top: 20%
		left: 50%
		transform: translateX(-50%)
		opacity: 1.0
		visibility: visible
		transition: opacity 0.15s linear, visibility 0.15s linear

		&.disappear
			opacity: 0.0
			visibility: hidden

@keyframes ahsu-spin1-ccw {
	0% {
		-webkit-transform: rotate(0deg)
	}
	100% {
		-webkit-transform: rotate(-360deg)
	}
}
	
@keyframes ahsu-spin1-cw {
	0% {
		-webkit-transform: rotate(0deg)
	}
	100% {
		-webkit-transform: rotate(360deg)
	}
}
